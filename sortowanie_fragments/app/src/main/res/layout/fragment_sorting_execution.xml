<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SortingExecutionFragment">

    <TextView
        android:id="@+id/sortMethodDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort Method Description"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/initialSequence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initial Sequence"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/sortedSequence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sorted Sequence"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>
